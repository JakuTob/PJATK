#include <iostream>
using namespace std;

void Oblicz(double a, double r, int n) {
    cout << "Twoj ciag arytmetyczny prezentuje sie tak:" << endl;
    double suma = 0;
    double zap = a;
    for (int i = 0; i < n; i++) {
    if (i > 0)
    cout << " + ";
    cout << zap;
    suma += zap;
    zap += r;
    }
    cout << " = " << suma << endl;
    cout << "Twoj ciag geometryczny prezentuje sie tak:" << endl;
    suma = 0;
    zap = a;
    for (int i = 0; i < n; i++) {
    if (i > 0)
    cout << " + ";
    cout << zap;
    suma += zap;
    zap *= r;
    }
    cout << " = " << suma << endl;
}

int main() {
    double a, r;
    int n;
    cout << "Podaj pierwszy wyraz ciagu: ";
    cin >> a;
    cout << "Podaj roznice/iloraz ciagu: ";
    cin >> r;
    cout << "Podaj liczbe elementow ciagu: ";
    cin >> n;

    Oblicz(a, r, n);

    return 0;
}
