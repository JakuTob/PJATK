#include <iostream>
using namespace std;
int main()
{
int wysokosc;
cout << "Jak duzy chcesz ten trojkat z gwiazdeczek? Ile pieter?\n";
cin >> wysokosc;
    for (int i = wysokosc; i > 0; i--)
    {
        for (int j = i; j > 0 ; j--)
            cout << "*";
        cout << "\n";
    }
    cout << "Odwrocony trojkacik for ya";
}

