// ConsoleApplication7.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;
int main()
{
	int liczba;
	int wynik = 0;
   cout << "Podaj swoja liczbe, oblicze ci sume jej cyfr!\n";
   cin >> liczba;
   while (liczba > 0)
   {
	   wynik += liczba % 10;
	   liczba /= 10;
   }
   cout << "Suma cyfr twojej liczby to " << wynik;
}
// PPRG_2_CW (5.)
